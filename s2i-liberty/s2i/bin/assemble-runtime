#!/bin/bash

echo copy anything in $WORKDIR/artifacts to dropins
cp -R $WORKDIR/artifacts/* /config/dropins/
echo copy anything in $WORKDIR/config to config
cp -R $WORKDIR/config/*  /config

if [ -d "$S2I_DESTINATION/artifacts" ]; then
  #echo copy anything in $S2I_DESTINATION/src/artifacts to dropins
  cp -R $S2I_DESTINATION/artifacts/* /config/dropins/
fi

if [ -d "$S2I_DESTINATION/config" ]; then
  #echo copy anything in $S2I_DESTINATION/src/artifacts to dropins
  cp -R $S2I_DESTINATION/config/* /config
fi

exit $rc
